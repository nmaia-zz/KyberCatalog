@model Project.Web.Models.KyberEditViewMdel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Kyber</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <input type="text" hidden id="txtId" name="txtId" value="@Model.Id" />

        <div class="form-group">
            <label class="control-label">Name: </label>
            <input type="text" id="txtName" name="txtName" class="form-control" value="@Model.Name" />
            <span id="chkName" class="error"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Color: </label>
            <input type="text" id="txtColor" name="txtColor" class="form-control" value="@Model.Color" />
            <span id="chkColor" class="error"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Planet: </label>
            <input type="text" id="txtPlanet" name="txtPlanet" class="form-control" value="@Model.Planet" />
            <span id="chkPlanet" class="error"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Meaning: </label>
            <input type="text" id="txtMeaning" name="txtMeaning" class="form-control" value="@Model.Meaning" />
            <span id="chkMeaning" class="error"></span>
        </div>

        <button class="btn btn-warning btn-sm" id="btnEdit">
            Save
        </button>

        <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>

        <br />
        <br />

        <div id="msgContainer">
            <span id="msg"></span>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/scripts/views/kybers/edit.js"></script>
}

@section Styles {

    <style>
        .error {
            color: lightcoral;
        }
    </style>
}