@model IEnumerable<Project.Domain.Entities.Kyber>

@{
    ViewData["Title"] = "Index";
}

<h2>CRUD for Kyber</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-md-4">
        <input type="text" id="txtFilter" class="form-control-sm" placeholder="Type name or color" aria-label="Filter" aria-describedby="basic-addon1" maxlength="30">
        <button id="btnSearch" class="btn btn-primary btn-sm">
            Search
        </button>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Color)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Planet)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Meaning)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Planet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Meaning)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {

    <script src="~/scripts/views/kybers/filter.js"></script>
}
